@using BTCPayServer.Plugins.Boltz
@using BTCPayServer.Security
@inject BoltzDaemon Daemon
@{
    Layout = "../Shared/_Layout.cshtml";
    var storeId = Context.GetImplicitStoreId();
}

@if (!ViewData.TryGetValue("NoHeader", out var noHeader))
{
    <div class="sticky-header">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="SetupMode" asp-route-storeId="@storeId" class="btn btn-secondary text-nowrap">
            Setup
        </a>
    </div>
}

<partial name="_StatusMessage" />
<partial name="Boltz/_Notification" />
@RenderBody()