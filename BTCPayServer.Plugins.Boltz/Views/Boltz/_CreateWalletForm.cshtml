@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Boltzrpc
@using AngleSharp.Common
@model Boltzrpc.WalletParams
@{
    var currencies = new List<Currency> { Currency.Lbtc, Currency.Btc };
}

<form asp-all-route-data="@Context.GetRouteData().ToDictionary()" method="post" class="mt-3">
    <div class="form-group mt-4">
        <label asp-for="Currency" class="form-label"></label>
        <select asp-items="new SelectList(currencies)" value="@Currency.Lbtc" asp-for="Currency" class="form-select">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input value="autoswap" asp-for="Name" class="form-control"></input>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success" value="BoltzCreateWallet">
        Create
    </button>
</form>