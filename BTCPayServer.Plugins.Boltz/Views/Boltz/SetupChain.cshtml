@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.Boltz.Models.BalanceSetup
@{
    Layout = "_LayoutSetup";
    ViewData["Title"] = "Setup Chain Swaps";
    ViewData["Description"] = "When do you want to swap L-BTC back for mainchain BTC?";
    //ViewData["Description"] = "Set the thresholds for your rebalancing";

    var unitPercent = "in % of total capacity";
    var unitSats = "in sats";
}

<form method="post" class="mt-3">

    <div class="form-group absolute">
        <label for="MaxBalance" class="form-label">When my L-BTC balance reached (@unitSats)</label>
        <input id="MaxBalance" name="MaxBalance" type="number" min="0" class="form-control"/>
    </div>

    <div class="d-flex flex-row gap-2 justify-content-between">
        <button name="command" value="Continue" type="submit" class="btn btn-success">
            Continue
        </button>
        <button name="command" value="Skip" type="submit" class="btn btn-secondary">
            Skip for now
        </button>
    </div>

</form>