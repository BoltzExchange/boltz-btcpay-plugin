@model BTCPayServer.Models.StoreViewModels.LightningNodeViewModel
@{
    var storeId = Model.StoreId;
    if (Model.CryptoCode != "BTC")
    {
        return;
    }
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
       const customNodeAccordian = document.getElementById("CustomNodeSupport");
       const template = document.getElementById("boltz");
       customNodeAccordian.appendChild(template.content.cloneNode(true));
    });
</script>

<template id="boltz">
    <div class="accordion-item">
        <h2 class="accordion-header" id="CustomBoltzHeader">
            <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#CustomBoltzContent" aria-controls="CustomBoltzContent" aria-expanded="false">
                <span><strong>Boltz</strong> via boltz-client</span>
                <vc:icon symbol="caret-down"/>
            </button>
        </h2>
        <div id="CustomBoltzContent" class="accordion-collapse collapse" aria-labelledby="CustomBoltzHeader" data-bs-parent="#CustomNodeSupport">
            <div class="accordion-body">
                <ul class="pb-2">
                    <li>
                        <code><b>type=</b>boltz;<b>server=</b>https://127.0.0.1:9002;<b>macaroon</b>=hex-encoded-macaroon;<b>walletId=</b>wallet-id-for-lightning-payments</code>
                    </li>
                </ul>
                <p class="my-2">Connects to an instance of  <a href="https://github.com/BoltzExchange/boltz-client" target="_blank" rel="noreferrer noopener">Boltz Client</a>, using a liquid wallet to handle lightning payments using swaps.</p>
            </div>
        </div>
    </div>
</template>

<div id="BoltzSetup" class="pt-3 tab-pane fade" role="tabpanel" aria-labelledby="LightningNodeType-Boltz">
    You can use Boltz to accept lightning payments without running a lightning node.
</div>