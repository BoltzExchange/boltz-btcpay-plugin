@using BTCPayServer.Plugins.Boltz.Models
@model Autoswaprpc.ChainSwap

@{
    var stats = new List<Stat>
        {
            new() { Name = "Amount", Value = Model.Amount, Unit = Unit.Sat },
            new() { Name = "Fee Estimate", Value = Model.FeeEstimate, Unit = Unit.Sat },
        };
    if (Model.DismissedReasons.Count > 0)
    {
        stats.Add(new() { Name = "Dismissed Reasons", Value = Model.DismissedReasons, Unit = Unit.None });
    }
}

<partial name="Boltz/_Stats" model="@stats"></partial>